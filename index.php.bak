<?php
// index.php - homepage with total donated from database
$dbHost = '127.0.0.1';
$dbName = 'kindnesscup';
$dbUser = 'root';
$dbPass = '';

$total = 0.0;
$count = 0;
try {
    $dsn = "mysql:host=$dbHost;dbname=$dbName;charset=utf8mb4";
    $pdo = new PDO($dsn, $dbUser, $dbPass, [
        PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
        PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC,
    ]);

    // DonationsWeb
    $hasWeb = $pdo->query("SHOW TABLES LIKE 'DonationsWeb'")->rowCount() > 0;
    if ($hasWeb) {
        $r = $pdo->query("SELECT COALESCE(SUM(amount),0) AS s, COUNT(*) AS c FROM DonationsWeb")->fetch();
        $total += (float) $r['s'];
        $count += (int) $r['c'];
    }

    // Donations (if exists)
    $hasDon = $pdo->query("SHOW TABLES LIKE 'Donations'")->rowCount() > 0;
    if ($hasDon) {
        $r = $pdo->query("SELECT COALESCE(SUM(amount),0) AS s, COUNT(*) AS c FROM Donations")->fetch();
        $total += (float) $r['s'];
        $count += (int) $r['c'];
    }
} catch (PDOException $ex) {
    // on error, leave totals as zero; avoid revealing DB errors on public page
    $total = 0.0;
    $count = 0;
}

$totalFormatted = number_format($total, 2);
?>
